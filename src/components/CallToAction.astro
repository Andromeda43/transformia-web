<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Efecto parallax para fondo
    const ctaSection = document.querySelector('.cta-section');
    const glow = document.querySelector('.glow-layer');
    const dataPoints = document.querySelectorAll('.data-point');
    
    if (ctaSection && glow) {
      ctaSection.addEventListener('mousemove', (e) => {
        const mouseX = e.clientX / window.innerWidth;
        const mouseY = e.clientY / window.innerHeight;
        
        // Mover la capa de brillo
        glow.style.transform = `translate(${mouseX * 50 - 25}px, ${mouseY * 50 - 25}px)`;
        
        // Mover los puntos de datos
        dataPoints.forEach(point => {
          const speed = Math.random() * 20 + 10;
          point.style.transform = `translate(${mouseX * speed}px, ${mouseY * speed}px)`;
        });
      });
    }
    
    // Animación pulsante para los LEDs
    const activeLeds = document.querySelectorAll('.led.active');
    
    activeLeds.forEach((led, index) => {
      led.style.animationDelay = `${index * 0.5}s`;
    });
    
    // Animación de hover 3D para el botón
    const cyberButton = document.querySelector('.cyber-button');
    
    if (cyberButton) {
      cyberButton.addEventListener('mousemove', (e) => {
        const rect = cyberButton.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const rotateX = (centerY - y) / 20;
        const rotateY = (x - centerX) / 20;
        
        cyberButton.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-5px)`;
      });
      
      cyberButton.addEventListener('mouseleave', () => {
        cyberButton.style.transform = '';
      });
    }
    
    // Animación para los data-bits en la barra inferior
    const dataBits = document.querySelectorAll('.data-bit');
    
    dataBits.forEach((bit, index) => {
      bit.style.animationDelay = `${index * 0.2}s`;
    });
  });
</script>