<style>
  .grid-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(128, 90, 213, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 90, 213, 0.1) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.3;
    z-index: 1;
  }
  
  .glow-orb {
    position: absolute;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    z-index: 0;
    filter: blur(80px);
  }
  
  .glow-orb.primary {
    background: rgba(176, 66, 255, 0.15);
    top: var(--top);
    right: var(--right);
  }
  
  .glow-orb.secondary {
    background: rgba(66, 135, 255, 0.1);
    bottom: var(--bottom);
    left: var(--left);
  }
  
  .tech-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--neon-purple);
    border-radius: 50%;
    z-index: 2;
    filter: blur(1px);
    box-shadow: 0 0 5px var(--neon-purple);
    opacity: 0.7;
    animation: float-particle 12s ease-in-out infinite;
  }
  
  .particle-1 {
    top: 20%;
    left: 15%;
    animation-delay: 0s;
  }
  
  .particle-2 {
    top: 70%;
    left: 45%;
    animation-delay: 2s;
    background: var(--neon-blue);
    box-shadow: 0 0 5px var(--neon-blue);
  }
  
  .particle-3 {
    top: 30%;
    right: 20%;
    animation-delay: 4s;
    background: var(--neon-pink);
    box-shadow: 0 0 5px var(--neon-pink);
  }
  
  .particle-4 {
    bottom: 25%;
    right: 10%;
    animation-delay: 6s;
  }
  
  .particle-5 {
    bottom: 40%;
    left: 10%;
    animation-delay: 8s;
    background: var(--neon-yellow);
    box-shadow: 0 0 5px var(--neon-yellow);
  }
  
  @keyframes float-particle {
    0%, 100% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(20px, -15px);
    }
    50% {
      transform: translate(-15px, 20px);
    }
    75% {
      transform: translate(-20px, -20px);
    }
  }
  
  /* Glitch text effect */
  .glitch-wrapper {
    position: relative;
    display: inline-block;
  }
  
  .glitch-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(176, 66, 255, 0.2);
    opacity: 0;
    mix-blend-mode: overlay;
    animation: glitch 3s infinite;
    pointer-events: none;
    z-index: 1;
  }
  
  @keyframes glitch {
    0% {
      opacity: 0;
      transform: translate(0);
    }
    1% {
      opacity: 0.3;
      transform: translate(-2px, 2px);
    }
    2% {
      opacity: 0;
      transform: translate(0);
    }
    5% {
      opacity: 0.3;
      transform: translate(2px, -2px);
    }
    6% {
      opacity: 0;
      transform: translate(0);
    }
    99% {
      opacity: 0;
      transform: translate(0);
    }
    100% {
      opacity: 0;
      transform: translate(0);
    }
  }
  
  /* Beneficios tecnológicos */
  .tech-benefits {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }
  
  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-body);
  }
  
  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: rgba(176, 66, 255, 0.2);
    color: var(--neon-purple);
  }
  
  /* Terminal frame */
  .terminal-frame {
    background: rgba(30, 30, 50, 0.95);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(176, 66, 255, 0.3);
    border: 1px solid rgba(176, 66, 255, 0.3);
    max-width: 450px;
    margin: 0 auto;
    position: relative;
  }
  
  .terminal-header {
    background: rgba(20, 20, 35, 0.9);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(176, 66, 255, 0.2);
  }
  
  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 8px;
  }
  
  .terminal-button.close {
    background: #ff5f57;
  }
  
  .terminal-button.minimize {
    background: #febc2e;
  }
  
  .terminal-button.maximize {
    background: #28c840;
  }
  
  .terminal-title {
    margin-left: auto;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .terminal-content {
    padding: 1.5rem;
  }
  
  .terminal-prompt {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
    font-family: var(--font-mono);
  }
  
  .prompt-sign {
    color: var(--neon-purple);
    margin-right: 0.5rem;
  }
  
  .typing-text {
    border-right: 2px solid var(--neon-purple);
    white-space: nowrap;
    overflow: hidden;
    animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
  }
  
  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }
  
  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: var(--neon-purple) }
  }
  
  .terminal-section {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 5px;
    border: 1px solid rgba(176, 66, 255, 0.2);
  }
  
  .terminal-subtitle {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }
  
  .terminal-text {
    font-family: var(--font-sans);
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .terminal-buttons {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .terminal-btn {
    position: relative;
    padding: 0.75rem 1.25rem;
    font-family: var(--font-mono);
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 4px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
    text-decoration: none;
    display: inline-block;
  }
  
  .terminal-btn.primary {
    background: linear-gradient(135deg, #6b46c1, #9f7aea);
    color: white;
    border: none;
  }
  
  .terminal-btn.secondary {
    background: transparent;
    color: var(--neon-purple);
    border: 1px solid var(--neon-purple);
  }
  
  .btn-glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    z-index: -1;
  }
  
  .terminal-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }
  
  .terminal-btn.primary:hover {
    box-shadow: 0 5px 15px rgba(107, 70, 193, 0.3), 0 0 10px rgba(176, 66, 255, 0.3);
  }
  
  .terminal-btn.secondary:hover {
    box-shadow: 0 5px 15px rgba(176, 66, 255, 0.2), 0 0 10px rgba(176, 66, 255, 0.2);
  }
  
  .terminal-btn:hover .btn-glitch {
    animation: glitch-slide 0.6s forwards;
  }
  
  @keyframes glitch-slide {
    0% {
      transform: translateX(-100%);
    }
    60% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .terminal-contact-info {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px dashed rgba(176, 66, 255, 0.3);
  }
  
  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .contact-item svg {
    color: var(--neon-purple);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .cta-content {
      margin-bottom: 2rem;
    }
    
    .terminal-frame {
      max-width: 100%;
    }
    
    .terminal-buttons {
      flex-direction: column;
    }
    
    .terminal-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Simulación de terminal con efecto de typing
    const typingText = document.querySelector('.typing-text');
    const originalText = typingText.textContent;
    
    // Resetear el texto para la animación
    typingText.textContent = '';
    
    // Añadir cada letra una por una
    let i = 0;
    const typeWriter = () => {
      if (i < originalText.length) {
        typingText.textContent += originalText.charAt(i);
        i++;
        setTimeout(typeWriter, 50);
      }
    };
    
    // Iniciar la animación
    setTimeout(typeWriter, 500);
  });
</script>