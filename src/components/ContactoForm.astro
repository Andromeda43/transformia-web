<section id="formulario-contacto" class="py-20 bg-light">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-dark" style="font-family: var(--font-title)">CONTACTO</h2>
        <div class="w-24 h-1 bg-purple mx-auto"></div>
        <p class="mt-6 text-lg" style="font-family: var(--font-body)">Completa el formulario y te contactaremos en menos de 24 horas</p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <form class="grid grid-cols-1 gap-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block mb-2 font-medium" style="font-family: var(--font-body)">Nombre</label>
              <input 
                type="text" 
                id="nombre" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
                placeholder="Tu nombre"
                required
              />
            </div>
            <div>
              <label for="empresa" class="block mb-2 font-medium" style="font-family: var(--font-body)">Empresa</label>
              <input 
                type="text" 
                id="empresa" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
                placeholder="Nombre de tu empresa"
              />
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block mb-2 font-medium" style="font-family: var(--font-body)">Email</label>
              <input 
                type="email" 
                id="email" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
                placeholder="tu@email.com"
                required
              />
            </div>
            <div>
              <label for="telefono" class="block mb-2 font-medium" style="font-family: var(--font-body)">Teléfono</label>
              <input 
                type="tel" 
                id="telefono" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
                placeholder="+34 XXX XX XX XX"
              />
            </div>
          </div>
          
          <div>
            <label for="servicio" class="block mb-2 font-medium" style="font-family: var(--font-body)">Servicio de interés</label>
            <select 
              id="servicio" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
            >
              <option value="">Selecciona un servicio</option>
              <option value="desarrollo">Desarrollo de software a medida</option>
              <option value="transformacion">Transformación digital y automatización</option>
              <option value="ia">Inteligencia artificial y data analytics</option>
              <option value="asesoria">Asesoría en optimización de procesos</option>
              <option value="otro">Otro</option>
            </select>
          </div>
          
          <div>
            <label for="mensaje" class="block mb-2 font-medium" style="font-family: var(--font-body)">Mensaje</label>
            <textarea 
              id="mensaje" 
              rows="5" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple focus:border-transparent"
              placeholder="Cuéntanos un poco sobre tu proyecto o necesidad"
            ></textarea>
          </div>
          
          <div class="flex items-center">
            <input 
              type="checkbox" 
              id="politica" 
              class="h-5 w-5 text-purple focus:ring-purple border-gray-300 rounded"
              required
            />
            <label for="politica" class="ml-2 text-sm text-gray-700" style="font-family: var(--font-body)">
              Acepto la <a href="/politica-privacidad" class="text-purple hover:underline">política de privacidad</a>
            </label>
          </div>
          
          <div class="text-center mt-4">
            <button type="submit" class="btn-primary px-8 py-3">Enviar mensaje</button>
          </div>
        </form>
      </div>
    </div>
  </section>