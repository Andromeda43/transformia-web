<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Validación de formulario
    const contactForm = document.getElementById('contactForm');
    const inputs = document.querySelectorAll('.tech-input');
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Aquí iría la lógica para enviar el formulario
        // Por ahora, simulamos un envío exitoso con una animación
        
        const submitButton = document.querySelector('.submit-button');
        const buttonText = submitButton.querySelector('.button-text');
        const buttonIcon = submitButton.querySelector('.button-icon');
        
        // Cambiar el texto y deshabilitar el botón durante el "envío"
        buttonText.textContent = "ENVIANDO...";
        submitButton.disabled = true;
        
        // Simular envío
        setTimeout(() => {
          buttonText.textContent = "¡MENSAJE ENVIADO!";
          buttonIcon.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          `;
          
          // Restaurar el botón después de un tiempo
          setTimeout(() => {
            buttonText.textContent = "ENVIAR MENSAJE";
            buttonIcon.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
            `;
            submitButton.disabled = false;
            contactForm.reset();
          }, 3000);
        }, 2000);
      });
    }
    
    // Efectos de input focus y interactividad
    inputs.forEach(input => {
      // Animación al focus
      input.addEventListener('focus', () => {
        const border = input.nextElementSibling;
        border.style.width = '100%';
      });
      
      input.addEventListener('blur', () => {
        if (!input.value) {
          const border = input.nextElementSibling;
          border.style.width = '0';
        }
      });
      
      // Mantener el borde si hay valor
      if (input.value) {
        const border = input.nextElementSibling;
        border.style.width = '100%';
      }
    });
    
    // Efecto parallax para elementos de fondo
    const section = document.querySelector('.contacto-section');
    const glow = document.querySelector('.radial-glow');
    const dataNodes = document.querySelectorAll('.data-node');
    
    section.addEventListener('mousemove', (e) => {
      const x = e.clientX / window.innerWidth;
      const y = e.clientY / window.innerHeight;
      
      // Mover el efecto de brillo
      glow.style.transform = `translate(${x * 30 - 15}px, ${y * 30 - 15}px)`;
      
      // Mover los nodos de datos
      dataNodes.forEach(node => {
        const speed = Math.random() * 20 + 10;
        node.style.transform = `translate(${x * speed}px, ${y * speed}px)`;
      });
    });
  });
</script>