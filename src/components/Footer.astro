          </div>
          
          <div class="contact-item">
            <div class="contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <span>Tauramena, Casanare</span>
          </div>
        </div>
        
        <div class="tech-code">
          <div class="code-header">
            <span class="code-label">TECH</span>
            <div class="code-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
          <div class="code-content">01001010 • 10101101 • 01110101</div>
        </div>
      </div>
    </div>
    
    <!-- Certificaciones -->
    <div class="certifications">
      <div class="cert-label">Tecnologías</div>
      <div class="cert-logos">
        <div class="cert-logo">AZURE</div>
        <div class="cert-logo">JS</div>
        <div class="cert-logo">PYTHON</div>
      </div>
    </div>
    
    <!-- Barra inferior de copyright -->
    <div class="copyright-bar">
      <div class="copyright">
        &copy; {currentYear} Transformia. Todos los derechos reservados.
      </div>
      
      <div class="footer-legal">
        <a href="/privacidad" class="legal-link">Política de Privacidad</a>
        <a href="/terminos" class="legal-link">Términos de Uso</a>
      </div>
    </div>
  </div>
  
  <!-- Línea de datos decorativa inferior -->
  <div class="footer-data-line">
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
    <div class="data-segment"></div>
  </div>
</footer>

<style>
  /* Variables y estilos base */
  :root {
    --neon-purple: #b042ff;
    --neon-blue: #4287ff;
    --neon-pink: #ff42b0;
    --neon-green: #42ff66;
    --dark-bg: #0a0a14;
    --darker-bg: #070710;
    --footer-bg: #0c0c1a;
  }
  
  .site-footer {
    position: relative;
    background-color: var(--footer-bg);
    color: white;
    padding: 0;
    overflow: hidden;
    z-index: 1;
  }
  
  .container {
    width: 90%;
    max-width: 1280px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
    padding: 4rem 0 2rem;
  }
  
  /* Fondos y efectos */
  .footer-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .grid-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(128, 90, 213, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 90, 213, 0.05) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.5;
    z-index: 1;
  }
  
  .glow-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at top center, rgba(176, 66, 255, 0.15) 0%, transparent 70%);
    z-index: 2;
  }
  
  .circuit-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23b042ff' stroke-width='0.5' opacity='0.2' fill='none' d='M10,10 L90,10 L90,90 L10,90 Z M10,50 L50,50 M50,50 L50,90 M50,50 L50,10 M50,50 L90,50 M30,10 L30,30 M70,10 L70,30 M30,90 L30,70 M70,90 L70,70'/%3E%3C/svg%3E");
    background-size: 200px 200px;
    opacity: 0.1;
    z-index: 3;
  }
  
  /* Línea decorativa superior */
  .top-divider {
    display: flex;
    width: 100%;
    height: 3px;
    background: rgba(176, 66, 255, 0.1);
    position: relative;
    overflow: hidden;
  }
  
  .line-segment {
    height: 100%;
    flex: 1;
    background: var(--neon-purple);
    opacity: 0.2;
    position: relative;
  }
  
  .line-segment::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--neon-purple);
    opacity: 0;
    animation: line-pulse 3s infinite;
  }
  
  .line-segment:nth-child(1)::before { animation-delay: 0s; }
  .line-segment:nth-child(2)::before { animation-delay: 0.6s; }
  .line-segment:nth-child(3)::before { animation-delay: 1.2s; }
  .line-segment:nth-child(4)::before { animation-delay: 1.8s; }
  .line-segment:nth-child(5)::before { animation-delay: 2.4s; }
  
  @keyframes line-pulse {
    0%, 100% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }
  
  /* Estructura del contenido */
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  
  /* Columna del logo */
  .footer-logo-column {
    display: flex;
    flex-direction: column;
  }
  
  .footer-logo {
    margin-bottom: 1.5rem;
  }
  
  .logo-container {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .logo-text {
    font-family: 'Space Mono', monospace;
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    letter-spacing: 1px;
    margin-bottom: 0.25rem;
    position: relative;
  }
  
  .logo-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, var(--neon-purple), transparent);
  }
  
  .logo-badge {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.8rem;
    color: var(--neon-purple);
    letter-spacing: 1px;
    padding: 0.25rem 0.5rem;
    background: rgba(176, 66, 255, 0.1);
    border: 1px solid rgba(176, 66, 255, 0.3);
    border-radius: 3px;
  }
  
  .footer-slogan {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    margin-bottom: 2rem;
    font-family: 'Space Grotesk', sans-serif;
  }
  
  /* Social links */
  .social-container {
    margin-top: auto;
  }
  
  .social-label {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .label-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-right: 1rem;
  }
  
  .label-line {
    flex-grow: 1;
    height: 1px;
    background: linear-gradient(90deg, rgba(176, 66, 255, 0.5), transparent);
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(176, 66, 255, 0.1);
    border: 1px solid rgba(176, 66, 255, 0.3);
    color: white;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background: rgba(176, 66, 255, 0.3);
    border-color: var(--neon-purple);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(176, 66, 255, 0.2);
  }
  
  /* Columna de contacto */
  .footer-title {
    font-family: 'Space Mono', monospace;
    font-size: 1.2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }
  
  .footer-title::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 30px;
    height: 2px;
    background: var(--neon-purple);
    box-shadow: 0 0 10px var(--neon-purple);
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    margin-bottom: 2rem;
  }
  
  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: rgba(255, 255, 255, 0.7);
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.95rem;
  }
  
  .contact-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(176, 66, 255, 0.1);
    color: var(--neon-purple);
  }
  
  /* Tech code box */
  .tech-code {
    background: rgba(10, 10, 20, 0.5);
    border: 1px solid rgba(176, 66, 255, 0.3);
    border-radius: 5px;
    overflow: hidden;
  }
  
  .code-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    background: rgba(176, 66, 255, 0.1);
    border-bottom: 1px solid rgba(176, 66, 255, 0.3);
  }
  
  .code-label {
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    color: var(--neon-purple);
    letter-spacing: 1px;
  }
  
  .code-dots {
    display: flex;
    gap: 5px;
  }
  
  .code-dots span {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: rgba(176, 66, 255, 0.5);
  }
  
  .code-dots span:nth-child(1) {
    animation: dot-pulse 2s infinite;
  }
  
  .code-dots span:nth-child(2) {
    animation: dot-pulse 2s infinite;
    animation-delay: 0.5s;
  }
  
  .code-dots span:nth-child(3) {
    animation: dot-pulse 2s infinite;
    animation-delay: 1s;
  }
  
  @keyframes dot-pulse {
    0%, 100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
      background-color: var(--neon-purple);
    }
  }
  
  .code-content {
    padding: 0.75rem 1rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
  }
  
  /* Certificaciones */
  .certifications {
    border-top: 1px solid rgba(176, 66, 255, 0.2);
    border-bottom: 1px solid rgba(176, 66, 255, 0.2);
    padding: 1.5rem 0;
    margin: 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  
  .cert-label {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .cert-logos {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  
  .cert-logo {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    font-weight: bold;
    color: var(--neon-purple);
    letter-spacing: 1px;
    padding: 0.5rem 1rem;
    background: rgba(176, 66, 255, 0.1);
    border: 1px solid rgba(176, 66, 255, 0.3);
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .cert-logo:hover {
    background: rgba(176, 66, 255, 0.2);
    transform: translateY(-3px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  }
  
  /* Copyright bar */
  .copyright-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
  }
  
  .copyright {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .footer-legal {
    display: flex;
    gap: 1.5rem;
  }
  
  .legal-link {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .legal-link:hover {
    color: var(--neon-purple);
  }
  
  /* Línea de datos decorativa inferior */
  .footer-data-line {
    display: flex;
    width: 100%;
    height: 5px;
    background: rgba(10, 10, 20, 0.8);
    position: relative;
    overflow: hidden;
  }
  
  .data-segment {
    height: 100%;
    flex: 1;
    background: var(--neon-purple);
    opacity: 0.2;
  }
  
  /* Responsive */
  @media (max-width: 1200px) {
    .footer-content {
      gap: 3rem;
    }
  }
  
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 3rem 0 1.5rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    .copyright-bar {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    
    .footer-legal {
      justify-content: center;
    }
    
    .social-container {
      margin-top: 0;
    }
  }
  
  @media (max-width: 576px) {
    .container {
      width: 95%;
      padding: 2.5rem 0 1rem;
    }
    
    .cert-logos {
      gap: 1rem;
    }
    
    .cert-logo {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }
    
    .footer-legal {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
    
    .footer-title {
      font-size: 1.1rem;
      margin-bottom: 1.2rem;
    }
    
    .logo-text {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animación para efecto de hover en los logos de certificaciones
    const certLogos = document.querySelectorAll('.cert-logo');
    
    certLogos.forEach(logo => {
      logo.addEventListener('mouseenter', () => {
        // Añadir color aleatorio al hover
        const colors = ['--neon-purple', '--neon-blue', '--neon-pink'];
        const randomColor = colors[Math.floor(Math.random() * colors.length)];
        const logoElement = logo as HTMLElement;
        logoElement.style.color = `var(${randomColor})`;
        logoElement.style.borderColor = `var(${randomColor})`;
      });
      
      logo.addEventListener('mouseleave', () => {
        // Restaurar color original
        const logoElement = logo as HTMLElement;
        logoElement.style.color = '';
        logoElement.style.borderColor = '';
      });
    });
  });
</script>