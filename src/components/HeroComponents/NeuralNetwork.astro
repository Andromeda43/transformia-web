  <style>
    /* Estilos para la red neuronal */
    .neural-network {
      background-color: rgba(20, 20, 40, 0.8);
      border-radius: 8px;
      border: 1px solid rgba(176, 66, 255, 0.5);
      overflow: hidden;
      box-shadow: 
        0 0 15px rgba(176, 66, 255, 0.3),
        0 0 30px rgba(176, 66, 255, 0.1);
      backdrop-filter: blur(10px);
      z-index: 5;
      position: relative;
      height: 400px;
      opacity: 0;
      transform: scale(0.95);
    }
    
    .network-header {
      background-color: rgba(30, 30, 50, 0.95);
      padding: 10px;
      border-bottom: 1px solid rgba(176, 66, 255, 0.3);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .network-controls {
      display: flex;
      gap: 6px;
    }
    
    .network-control {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background-color: #b042ff;
      opacity: 0.7;
    }
  
    .network-title {
      color: #fff;
      font-family: 'Space Mono', monospace;
      font-size: 0.8rem;
      letter-spacing: 1px;
    }
    
    .network-body {
      padding: 20px;
      position: relative;
      height: calc(100% - 33px);
      display: flex;
      flex-direction: column;
    }
  
    .neural-layers {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 250px;
      margin-bottom: 20px;
      position: relative;
    }
  
    .layer {
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      height: 100%;
      position: relative;
      z-index: 1;
    }
  
    .node {
      width: 15px;
      height: 15px;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(176, 66, 255, 0.8) 0%, rgba(176, 66, 255, 0.3) 70%);
      box-shadow: 0 0 8px rgba(176, 66, 255, 0.6);
      position: relative;
      z-index: 2;
    }
  
    .node::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: rgba(176, 66, 255, 0.4);
      filter: blur(3px);
      animation: pulse-node 2s infinite ease-in-out;
      animation-delay: calc(var(--index, 0) * 0.2s);
    }
  
    .node[data-index="0"] { --index: 0; }
    .node[data-index="1"] { --index: 1; }
    .node[data-index="2"] { --index: 2; }
    .node[data-index="3"] { --index: 3; }
    .node[data-index="4"] { --index: 4; }
    .node[data-index="5"] { --index: 5; }
    .node[data-index="6"] { --index: 6; }
  
    @keyframes pulse-node {
      0%, 100% {
        transform: scale(1);
        opacity: 0.7;
      }
      50% {
        transform: scale(1.5);
        opacity: 1;
      }
    }
  
    .input-layer .node {
      background: radial-gradient(circle, rgba(100, 200, 255, 0.8) 0%, rgba(100, 200, 255, 0.3) 70%);
      box-shadow: 0 0 8px rgba(100, 200, 255, 0.6);
    }
  
    .input-layer .node::before {
      background: rgba(100, 200, 255, 0.4);
    }
  
    .output-layer .node {
      background: radial-gradient(circle, rgba(255, 100, 200, 0.8) 0%, rgba(255, 100, 200, 0.3) 70%);
      box-shadow: 0 0 8px rgba(255, 100, 200, 0.6);
    }
  
    .output-layer .node::before {
      background: rgba(255, 100, 200, 0.4);
    }
  
    .network-info {
      font-family: 'Space Mono', monospace;
      color: white;
      line-height: 1.8;
    }
    
    .info-line {
      display: flex;
      margin-bottom: 8px;
      align-items: center;
    }
    
    .info-label {
      color: #b042ff;
      margin-right: 10px;
      font-weight: bold;
    }
    
    .info-text {
      opacity: 0; /* Inicialmente invisible */
      overflow: hidden;
      white-space: nowrap;
      animation: typing 2s steps(30, end) forwards;
    }
    
    /* Animaciones de typing m치s r치pidas */
    #network-text1 {
      animation-delay: 0.2s;
      animation-duration: 1.5s;
    }
    
    #network-text2 {
      animation-delay: 1.2s;
      animation-duration: 1.5s;
    }
    
    #network-text3 {
      animation-delay: 2.2s;
      animation-duration: 1.5s;
    }
    
    .info-cursor {
      display: inline-block;
      width: 10px;
      height: 20px;
      background-color: #b042ff;
      animation: blink 1s step-end infinite;
    }
  
    /* SVG Neural connections */
    .neural-layers::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url("data:image/svg+xml,%3Csvg width='100%25' height='100%25' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3ClinearGradient id='grad1' x1='0%25' y1='0%25' x2='100%25' y2='0%25'%3E%3Cstop offset='0%25' style='stop-color:rgba(100,200,255,0.3);stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:rgba(176,66,255,0.3);stop-opacity:1' /%3E%3C/linearGradient%3E%3ClinearGradient id='grad2' x1='0%25' y1='0%25' x2='100%25' y2='0%25'%3E%3Cstop offset='0%25' style='stop-color:rgba(176,66,255,0.3);stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:rgba(255,100,200,0.3);stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Cg class='connections'%3E%3C/g%3E%3C/svg%3E");
      z-index: 0;
    }
  
    /* Animar las conexiones neuronales */
    .neural-layers::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        repeating-linear-gradient(
          60deg,
          transparent,
          transparent 20px,
          rgba(176, 66, 255, 0.1) 20px,
          rgba(176, 66, 255, 0.1) 40px
        );
      opacity: 0.1;
      animation: shift-lines 8s linear infinite;
      pointer-events: none;
    }
  
    @keyframes shift-lines {
      0% {
        background-position: 0 0;
      }
      100% {
        background-position: 100px 0;
      }
    }
  
    /* Animaci칩n para nodos activos */
    .node.active {
      background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(176, 66, 255, 0.6) 70%);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
      transition: all 0.3s ease;
    }
    
    .input-layer .node.active {
      background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(100, 200, 255, 0.6) 70%);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
    }
    
    .output-layer .node.active {
      background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(255, 100, 200, 0.6) 70%);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
    }
  
    @keyframes typing {
      from {
        width: 0;
        opacity: 1;
      }
      to {
        width: 100%;
        opacity: 1;
      }
    }
    
    @keyframes blink {
      from, to {
        opacity: 1;
      }
      50% {
        opacity: 0;
      }
    }
  
    @media (max-width: 768px) {
      .neural-network {
        height: 350px;
      }
      
      .neural-layers {
        height: 200px;
      }
    }
  </style>