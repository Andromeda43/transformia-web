    </div>
    
    <div class="terminal-footer">
      <div class="footer-tech">
        <div class="tech-line"></div>
        <div class="tech-circle"></div>
        <div class="tech-line"></div>
      </div>
      <div class="footer-status">SISTEMA V.2.5 // METODOLOGÍA ÁGIL // TRANSFORMIA</div>
      <div class="footer-scan-effect"></div>
    </div>
  </div>
  
  <style>
    /* Variables y estilos base */
    .cyber-benefits {
      position: relative;
      width: 100%;
      max-width: 1200px;
      margin: 2rem auto 4rem;
      z-index: 10;
      color: white;
      font-family: var(--font-mono);
    }
    
    /* Terminal Header */
    .terminal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(15, 15, 30, 0.8);
      padding: 0.75rem 1.5rem;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      border: 1px solid var(--purple);
      border-bottom: none;
      position: relative;
      overflow: hidden;
    }
    
    .terminal-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(138, 66, 255, 0.2), transparent);
      animation: header-glow 5s ease-in-out infinite;
    }
    
    @keyframes header-glow {
      0%, 100% {
        transform: translateX(-100%);
      }
      50% {
        transform: translateX(100%);
      }
    }
    
    .terminal-controls {
      display: flex;
      gap: 8px;
    }
    
    .control {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      border: 1px solid rgba(138, 66, 255, 0.6);
    }
    
    .control:nth-child(1) { background-color: rgba(255, 66, 66, 0.7); }
    .control:nth-child(2) { background-color: rgba(255, 206, 66, 0.7); }
    .control:nth-child(3) { background-color: rgba(66, 255, 112, 0.7); }
    
    .terminal-title {
      position: relative;
      font-size: 1.1rem;
      font-weight: bold;
      color: var(--purple);
      letter-spacing: 1px;
    }
    
    .text-effect {
      display: inline-block;
      position: relative;
      text-shadow: 0 0 10px rgba(138, 66, 255, 0.7);
    }
    
    .text-effect::after {
      content: '';
      position: absolute;
      top: 0;
      right: -15px;
      width: 2px;
      height: 100%;
      background-color: var(--purple);
      animation: cursor-blink 1s infinite;
    }
    
    @keyframes cursor-blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0; }
    }
    
    .scan-effect {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 20px;
      background: linear-gradient(to bottom, 
        rgba(138, 66, 255, 0.3) 0%, 
        transparent 50%, 
        rgba(138, 66, 255, 0.3) 100%);
      animation: scan 2s linear infinite;
      opacity: 0.5;
      pointer-events: none;
    }
    
    @keyframes scan {
      0% { transform: translateY(-20px); }
      100% { transform: translateY(30px); }
    }
    
    .terminal-status {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .status-icon {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background-color: #4aff4a;
      box-shadow: 0 0 10px #4aff4a;
      animation: status-pulse 2s infinite;
    }
    
    @keyframes status-pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    .status-text {
      font-size: 0.8rem;
      letter-spacing: 1px;
      color: #4aff4a;
    }
    
    /* Terminal Container */
    .cyber-container {
      padding: 2rem;
      background: rgba(10, 10, 20, 0.7);
      backdrop-filter: blur(10px);
      border-left: 1px solid var(--purple);
      border-right: 1px solid var(--purple);
      min-height: 400px;
      position: relative;
      overflow: hidden;
    }
    
    .cyber-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: radial-gradient(circle at 20% 30%, rgba(138, 66, 255, 0.1) 0%, transparent 50%);
      z-index: -1;
    }
    
    /* Tarjetas de beneficios */
    .benefit-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }
    
    .cyber-card {
      position: relative;
      background: rgba(20, 20, 40, 0.8);
      border: 1px solid rgba(138, 66, 255, 0.4);
      border-radius: 8px;
      overflow: hidden;
      min-height: 280px;
      transform-style: preserve-3d;
      transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      animation: card-in cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.5s forwards;
      opacity: 0;
      transform: translateY(30px);
    }
    
    .cyber-card[data-index="1"] { animation-delay: 0.1s; }
    .cyber-card[data-index="2"] { animation-delay: 0.3s; }
    .cyber-card[data-index="3"] { animation-delay: 0.5s; }
    .cyber-card[data-index="4"] { animation-delay: 0.7s; }
    
    @keyframes card-in {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .cyber-card:hover {
      transform: translateY(-10px) rotateX(5deg);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }
    
    .card-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(138, 66, 255, 0.2) 0%, transparent 100%);
      z-index: 1;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .cyber-card:hover .card-overlay {
      opacity: 1;
    }
    
    .card-glitch {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(45deg, transparent, rgba(138, 66, 255, 0.3), transparent);
      z-index: 0;
      opacity: 0;
    }
    
    .cyber-card:hover .card-glitch {
      animation: glitch 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    }
    
    @keyframes glitch {
      0%, 100% {
        transform: translate(0);
        opacity: 0;
      }
      20% {
        transform: translate(-5px, 5px);
        opacity: 0.5;
      }
      40% {
        transform: translate(-5px, -5px);
        opacity: 0.8;
      }
      60% {
        transform: translate(5px, 5px);
        opacity: 0.5;
      }
      80% {
        transform: translate(5px, -5px);
        opacity: 0.3;
      }
    }
    
    .card-header {
      position: relative;
      padding: 1.25rem;
      display: flex;
      align-items: center;
      border-bottom: 1px solid rgba(138, 66, 255, 0.3);
      z-index: 2;
    }
    
    .header-tech-border {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
    }
    
    .header-tech-border span {
      position: absolute;
      width: 8px;
      height: 8px;
      border-radius: 1px;
      background-color: var(--purple);
      box-shadow: 0 0 8px var(--purple);
    }
    
    .header-tech-border span:nth-child(1) {
      top: 0;
      left: 0;
    }
    
    .header-tech-border span:nth-child(2) {
      top: 0;
      right: 0;
    }
    
    .header-tech-border span:nth-child(3) {
      bottom: 0;
      left: 0;
    }
    
    .header-tech-border span:nth-child(4) {
      bottom: 0;
      right: 0;
    }
    
    .header-icon {
      width: 40px;
      height: 40px;
      color: var(--purple);
      margin-right: 1rem;
      filter: drop-shadow(0 0 8px rgba(138, 66, 255, 0.7));
    }
    
    .header-details {
      flex: 1;
    }
    
    .cyber-card h4 {
      font-size: 1.1rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: white;
      letter-spacing: 1px;
      text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
    }
    
    .tech-badge {
      display: inline-block;
      background: rgba(138, 66, 255, 0.2);
      color: var(--purple-light);
      font-size: 0.7rem;
      padding: 2px 8px;
      border-radius: 3px;
      letter-spacing: 1px;
      border: 1px solid rgba(138, 66, 255, 0.4);
    }
    
    .card-body {
      position: relative;
      padding: 1.25rem;
      z-index: 2;
    }
    
    .terminal-line {
      width: 100%;
      height: 1px;
      background: linear-gradient(90deg, var(--purple), transparent);
      margin-bottom: 1rem;
      position: relative;
    }
    
    .terminal-line::before {
      content: '';
      position: absolute;
      width: 5px;
      height: 5px;
      background-color: var(--purple);
      border-radius: 50%;
      left: 0;
      top: -2px;
      box-shadow: 0 0 5px var(--purple);
    }
    
    .cyber-card p {
      font-family: var(--font-sans);
      font-size: 0.95rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.85);
    }
    
    .card-tech {
      position: absolute;
      bottom: 1rem;
      right: 1rem;
      display: flex;
      gap: 5px;
      z-index: 2;
    }
    
    .tech-dot {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background-color: var(--purple);
      opacity: 0.7;
      animation: dot-blink 2s infinite;
    }
    
    .tech-dot:nth-child(1) { animation-delay: 0s; }
    .tech-dot:nth-child(2) { animation-delay: 0.5s; }
    .tech-dot:nth-child(3) { animation-delay: 1s; }
    
    @keyframes dot-blink {
      0%, 50%, 100% { opacity: 0.7; }
      25%, 75% { opacity: 0.3; }
    }
    
    /* Terminal Footer */
    .terminal-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(15, 15, 30, 0.8);
      padding: 0.75rem 1.5rem;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      border: 1px solid var(--purple);
      border-top: none;
      position: relative;
      overflow: hidden;
    }
    
    .footer-tech {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .tech-line {
      width: 15px;
      height: 2px;
      background-color: var(--purple);
    }
    
    .tech-circle {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      border: 1px solid var(--purple);
    }
    
    .footer-status {
      font-size: 0.8rem;
      color: rgba(255, 255, 255, 0.7);
      letter-spacing: 1px;
    }
    
    .footer-scan-effect {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--purple), transparent);
      animation: scan-footer 3s linear infinite;
    }
    
    @keyframes scan-footer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    /* Responsive */
    @media (max-width: 992px) {
      .cyber-benefits {
        margin: 2rem auto 3rem;
      }
      
      .benefit-cards {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 768px) {
      .terminal-header,
      .terminal-footer {
        padding: 0.6rem 1rem;
      }
      
      .terminal-title {
        font-size: 0.9rem;
      }
      
      .cyber-container {
        padding: 1.5rem;
      }
      
      .benefit-cards {
        grid-template-columns: 1fr;
        max-width: 450px;
        margin: 0 auto;
      }
      
      .header-icon {
        width: 35px;
        height: 35px;
      }
      
      .cyber-card h4 {
        font-size: 1rem;
      }
      
      .cyber-card p {
        font-size: 0.9rem;
      }
      
      .footer-status {
        font-size: 0.7rem;
      }
    }
    
    @media (max-width: 576px) {
      .terminal-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
      
      .terminal-controls {
        align-self: flex-end;
      }
      
      .cyber-container {
        padding: 1rem;
      }
      
      .card-header {
        padding: 1rem;
      }
      
      .card-body {
        padding: 1rem;
      }
      
      .terminal-footer {
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-start;
      }
    }
  </style>
  
  <script>
    // Añadir efecto de glitch aleatorio a las tarjetas
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.cyber-card');
      
      function randomGlitch() {
        const randomCard = cards[Math.floor(Math.random() * cards.length)];
        const glitchElement = randomCard.querySelector('.card-glitch');
        
        glitchElement.style.opacity = '1';
        
        setTimeout(() => {
          glitchElement.style.opacity = '0';
        }, 300);
      }
      
      // Iniciar glitches aleatorios
      setInterval(randomGlitch, 3000);
    });
  </script>