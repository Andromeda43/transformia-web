---
// MetodologiaHeader.astro - Componente retrofuturista para el encabezado
---

<div class="cyber-header">
    <!-- Elementos técnicos decorativos superiores -->
    <div class="tech-decorations">
      <div class="tech-line left-line"></div>
      <div class="tech-module">
        <div class="module-dot"></div>
        <div class="module-label">TF.01</div>
      </div>
      <div class="tech-line center-line"></div>
      <div class="tech-module">
        <div class="module-dot"></div>
        <div class="module-label">TF.02</div>
      </div>
      <div class="tech-line right-line"></div>
    </div>
    
    <!-- Contenedor principal del encabezado -->
    <div class="header-container">
      <!-- Elemento de interfaz izquierdo -->
      <div class="side-ui left-ui">
        <div class="ui-line"></div>
        <div class="ui-circle"></div>
        <div class="ui-bracket">{</div>
      </div>
      
      <!-- Contenido principal -->
      <div class="header-content">
        <div class="header-badge">
          <div class="badge-text">CÓMO TRABAJAMOS</div>
          <div class="badge-border"></div>
          <div class="badge-pulse"></div>
        </div>
        
        <h2 class="header-title">
          <div class="glitch-wrapper">
            <div class="glitch" data-text="METODOLOGÍA">METODOLOGÍA</div>
          </div>
          <span class="highlight">ÁGIL</span>
        </h2>
        
        <div class="header-decoration">
          <div class="dec-line"></div>
          <div class="dec-box">
            <div class="box-inner"></div>
          </div>
          <div class="dec-line"></div>
        </div>
        
        <p class="header-description">
          <span class="terminal-prompt">></span> 
          <span class="typing-text">En Transformia trabajamos mediante métodos ágiles que nos permiten colaborar estrechamente 
          con nuestros clientes para entregar el máximo valor en el menor tiempo posible,
          adaptándonos rápidamente a las necesidades del mercado.</span>
        </p>
      </div>
      
      <!-- Elemento de interfaz derecho -->
      <div class="side-ui right-ui">
        <div class="ui-bracket">}</div>
        <div class="ui-circle"></div>
        <div class="ui-line"></div>
      </div>
    </div>
    
    <!-- Data scan effect -->
    <div class="data-scan"></div>
  </div>
  
  <style>
    /* Variables y estilos base */
    .cyber-header {
      position: relative;
      width: 100%;
      margin-bottom: 5rem;
      perspective: 1000px;
    }
    
    /* Decoraciones técnicas superiores */
    .tech-decorations {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      gap: 5px;
    }
    
    .tech-line {
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--purple), transparent);
      position: relative;
    }
    
    .left-line, .right-line {
      width: 100px;
    }
    
    .center-line {
      width: 50px;
    }
    
    .tech-module {
      display: flex;
      align-items: center;
      gap: 5px;
      position: relative;
    }
    
    .module-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: var(--purple);
      box-shadow: 0 0 10px var(--purple);
      animation: dot-pulse 3s infinite alternate;
    }
    
    @keyframes dot-pulse {
      0%, 100% {
        transform: scale(1);
        opacity: 0.7;
      }
      50% {
        transform: scale(1.3);
        opacity: 1;
      }
    }
    
    .module-label {
      font-size: 0.7rem;
      color: var(--purple);
      font-family: var(--font-mono);
      letter-spacing: 1px;
    }
    
    /* Contenedor principal */
    .header-container {
      display: flex;
      align-items: stretch;
      max-width: 1000px;
      margin: 0 auto;
      position: relative;
    }
    
    /* Elementos de interfaz laterales */
    .side-ui {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 40px;
    }
    
    .ui-line {
      width: 2px;
      height: 100px;
      background-color: rgba(138, 66, 255, 0.5);
      position: relative;
    }
    
    .ui-line::before, .ui-line::after {
      content: '';
      position: absolute;
      width: 6px;
      height: 2px;
      background-color: var(--purple);
      left: -2px;
    }
    
    .ui-line::before {
      top: 20px;
    }
    
    .ui-line::after {
      bottom: 20px;
    }
    
    .ui-circle {
      width: 10px;
      height: 10px;
      border: 1px solid var(--purple);
      border-radius: 50%;
      margin: 10px 0;
    }
    
    .ui-bracket {
      font-size: 2rem;
      color: var(--purple);
      line-height: 1;
      text-shadow: 0 0 10px rgba(138, 66, 255, 0.7);
    }
    
    /* Contenido principal */
    .header-content {
      flex: 1;
      text-align: center;
      padding: 0 2rem;
    }
    
    /* Badge estilo tech */
    .header-badge {
      display: inline-block;
      position: relative;
      margin-bottom: 1.5rem;
    }
    
    .badge-text {
      background: rgba(20, 20, 40, 0.6);
      color: var(--purple);
      font-family: var(--font-mono);
      font-size: 0.9rem;
      font-weight: bold;
      letter-spacing: 2px;
      padding: 0.6rem 1.5rem;
      border: 1px solid rgba(138, 66, 255, 0.5);
      border-radius: 4px;
      position: relative;
      z-index: 2;
      text-shadow: 0 0 5px rgba(138, 66, 255, 0.5);
    }
    
    .badge-border {
      position: absolute;
      top: -5px;
      left: -5px;
      right: -5px;
      bottom: -5px;
      border: 1px solid rgba(138, 66, 255, 0.3);
      border-radius: 6px;
      z-index: 1;
    }
    
    .badge-pulse {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(138, 66, 255, 0.5), transparent);
      z-index: 0;
      opacity: 0;
      animation: badge-pulse 3s infinite;
    }
    
    @keyframes badge-pulse {
      0%, 100% {
        opacity: 0;
        transform: translateX(-100%);
      }
      50% {
        opacity: 0.8;
        transform: translateX(100%);
      }
    }
    
    /* Título con efecto glitch */
    .header-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      line-height: 1.2;
      margin-bottom: 1.5rem;
      font-weight: 800;
      font-family: var(--font-mono);
      color: white;
      position: relative;
    }
    
    .glitch-wrapper {
      position: relative;
      display: inline-block;
      margin-right: 0.5rem;
    }
    
    .glitch {
      position: relative;
      color: white;
    }
    
    .glitch::before,
    .glitch::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(10, 10, 20, 0.7);
      opacity: 0.8;
    }
    
    .glitch::before {
      color: #0ff;
      z-index: -1;
      animation: glitch-effect 3s infinite alternate-reverse;
    }
    
    .glitch::after {
      color: #f0f;
      z-index: -2;
      animation: glitch-effect 2s infinite alternate;
    }
    
    @keyframes glitch-effect {
      0% {
        transform: none;
        opacity: 0.8;
      }
      7% {
        transform: translateX(2px);
      }
      10% {
        transform: none;
      }
      27% {
        transform: none;
        opacity: 0.8;
      }
      30% {
        transform: translateX(-5px);
        opacity: 0;
      }
      35% {
        transform: none;
        opacity: 0.8;
      }
      52% {
        transform: none;
      }
      55% {
        transform: translateX(5px);
      }
      50% {
        transform: none;
      }
      70% {
        transform: none;
        opacity: 0.8;
      }
      72% {
        transform: translateX(2px);
        opacity: 0;
      }
      80% {
        transform: none;
        opacity: 0.8;
      }
      100% {
        transform: none;
      }
    }
    
    .highlight {
      color: var(--purple);
      text-shadow: 0 0 20px rgba(138, 66, 255, 0.7);
      position: relative;
      display: inline-block;
    }
    
    .highlight::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 5px;
      background: var(--purple);
      animation: highlight-glow 3s infinite alternate;
    }
    
    @keyframes highlight-glow {
      0%, 100% {
        opacity: 0.7;
        box-shadow: 0 0 10px var(--purple);
      }
      50% {
        opacity: 1;
        box-shadow: 0 0 20px var(--purple), 0 0 30px var(--purple);
      }
    }
    
    /* Decoración central */
    .header-decoration {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 2rem 0;
      gap: 10px;
    }
    
    .dec-line {
      height: 2px;
      width: 100px;
      background: linear-gradient(90deg, transparent, var(--purple), transparent);
    }
    
    .dec-box {
      width: 20px;
      height: 20px;
      border: 1px solid var(--purple);
      transform: rotate(45deg);
      position: relative;
    }
    
    .box-inner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 10px;
      height: 10px;
      background-color: var(--purple);
      animation: box-pulse 3s infinite alternate;
    }
    
    @keyframes box-pulse {
      0%, 100% {
        transform: translate(-50%, -50%) scale(0.6);
        opacity: 0.7;
      }
      50% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
      }
    }
    
    /* Descripción con efecto de terminal */
    .header-description {
      max-width: 800px;
      margin: 0 auto;
      font-size: clamp(1rem, 2vw, 1.1rem);
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.85);
      text-align: left;
      position: relative;
    }
    
    .terminal-prompt {
      color: var(--purple);
      margin-right: 10px;
      font-family: var(--font-mono);
      font-weight: bold;
      animation: prompt-blink 1s infinite;
    }
    
    @keyframes prompt-blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    .typing-text {
      opacity: 0;
      animation: typing 3s forwards;
      position: relative;
    }
    
    @keyframes typing {
      0% {
        width: 0;
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      100% {
        opacity: 1;
      }
    }
    
    /* Efecto de escaneo de datos */
    .data-scan {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, transparent, var(--purple), transparent);
      opacity: 0.7;
      animation: scan-move 4s ease-in-out infinite;
      z-index: 5;
      pointer-events: none;
    }
    
    @keyframes scan-move {
      0%, 100% {
        top: 0;
        opacity: 0;
      }
      5% {
        opacity: 0.7;
      }
      45% {
        top: 100%;
        opacity: 0.7;
      }
      50% {
        opacity: 0;
      }
    }
    
    /* Responsive */
    @media (max-width: 992px) {
      .cyber-header {
        margin-bottom: 4rem;
      }
      
      .left-line, .right-line {
        width: 70px;
      }
      
      .side-ui {
        width: 30px;
      }
      
      .ui-line {
        height: 80px;
      }
    }
    
    @media (max-width: 768px) {
      .tech-decorations {
        margin-bottom: 1.5rem;
      }
      
      .header-container {
        padding: 0 1rem;
      }
      
      .left-line, .right-line {
        width: 50px;
      }
      
      .center-line {
        width: 30px;
      }
      
      .header-content {
        padding: 0 1rem;
      }
      
      .dec-line {
        width: 70px;
      }
    }
    
    @media (max-width: 576px) {
      .cyber-header {
        margin-bottom: 3rem;
      }
      
      .tech-decorations {
        display: none;
      }
      
      .side-ui {
        display: none;
      }
      
      .header-content {
        padding: 0;
      }
      
      .badge-text {
        font-size: 0.8rem;
        padding: 0.5rem 1.2rem;
      }
      
      .header-title {
        font-size: 2.2rem;
      }
      
      .dec-line {
        width: 50px;
      }
      
      .header-description {
        font-size: 0.95rem;
      }
    }
  </style>
  
  <script>
    // Animación de la descripción con efecto de terminal
    document.addEventListener('DOMContentLoaded', function() {
      const headerContent = document.querySelector('.header-content');
      const textElement = headerContent.querySelector('.typing-text');
      const text = textElement.textContent;
      
      textElement.textContent = '';
      textElement.style.opacity = '1';
      
      let i = 0;
      function typeWriter() {
        if (i < text.length) {
          textElement.textContent += text.charAt(i);
          i++;
          setTimeout(typeWriter, Math.random() * 30 + 10); // Velocidad de escritura aleatoria para efecto más realista
        }
      }
      
      // Solo iniciar la animación si está en el viewport
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            setTimeout(typeWriter, 500);
            observer.disconnect();
          }
        });
      });
      
      observer.observe(headerContent);
    });
  </script>