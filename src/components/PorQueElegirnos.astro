  .porque-elegirnos-section {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background-color: var(--dark-bg);
    color: white;
    padding: 7rem 0 5rem;
    overflow: hidden;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .container {
    width: 92%;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }
  
  /* Elementos de fondo */
  .cyber-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
  }
  
  .grid-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(128, 90, 213, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 90, 213, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
    z-index: 1;
  }
  
  .glow-orbs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }
  
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.2;
    z-index: 2;
  }
  
  .orb-1 {
    top: 20%;
    left: 10%;
    width: 40vw;
    height: 40vw;
    background: radial-gradient(circle, var(--neon-purple) 0%, transparent 70%);
    animation: orb-float 20s ease-in-out infinite;
  }
  
  .orb-2 {
    bottom: 10%;
    right: 5%;
    width: 30vw;
    height: 30vw;
    background: radial-gradient(circle, var(--neon-blue) 0%, transparent 70%);
    animation: orb-float 25s ease-in-out infinite reverse;
  }
  
  .orb-3 {
    top: 60%;
    left: 20%;
    width: 25vw;
    height: 25vw;
    background: radial-gradient(circle, var(--neon-pink) 0%, transparent 70%);
    animation: orb-float 15s ease-in-out infinite;
    animation-delay: 5s;
  }
  
  @keyframes orb-float {
    0%, 100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(5vw, 3vh);
    }
  }
  
  /* Encabezado de sección */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .badge {
    display: inline-block;
    position: relative;
    padding: 0.5rem 1.5rem;
    background-color: rgba(176, 66, 255, 0.1);
    border: 1px solid var(--neon-purple);
    border-radius: 20px;
    margin-bottom: 1.5rem;
    overflow: hidden;
  }
  
  .badge-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    font-weight: bold;
    color: var(--neon-purple);
    letter-spacing: 2px;
    text-transform: uppercase;
    position: relative;
    z-index: 1;
  }
  
  .badge-light {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(176, 66, 255, 0.3), transparent);
    animation: badge-light 3s ease-in-out infinite;
  }
  
  @keyframes badge-light {
    0% {
      left: -100%;
    }
    50%, 100% {
      left: 100%;
    }
  }
  
  .section-title {
    font-size: 3.2rem;
    font-weight: 700;
    color: white;
    margin: 0.5rem 0 1rem;
    font-family: 'Space Grotesk', sans-serif;
    position: relative;
    display: inline-block;
  }
  
  .title-glitch {
    position: relative;
    display: inline-block;
  }
  
  .title-glitch::before,
  .title-glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: white;
  }
  
  .title-glitch::before {
    color: var(--neon-pink);
    z-index: -1;
    animation: glitch-anim-1 5s infinite linear alternate-reverse;
  }
  
  .title-glitch::after {
    color: var(--neon-blue);
    z-index: -2;
    animation: glitch-anim-2 3s infinite linear alternate-reverse;
  }
  
  @keyframes glitch-anim-1 {
    0%, 100% { opacity: 0; transform: translateX(0); }
    5%, 30% { opacity: 0; transform: translateX(0); }
    31% { opacity: 0.3; transform: translateX(2px); }
    32% { opacity: 0; transform: translateX(0); }
    98% { opacity: 0; transform: translateX(0); }
    99% { opacity: 0.3; transform: translateX(-2px); }
  }
  
  @keyframes glitch-anim-2 {
    0%, 100% { opacity: 0; transform: translateX(0); }
    10%, 40% { opacity: 0; transform: translateX(0); }
    41% { opacity: 0.3; transform: translateX(-2px); }
    42% { opacity: 0; transform: translateX(0); }
    78% { opacity: 0; transform: translateX(0); }
    79% { opacity: 0.3; transform: translateX(2px); }
    80% { opacity: 0; transform: translateX(0); }
  }
  
  .title-line {
    position: relative;
    width: 120px;
    height: 3px;
    background: rgba(176, 66, 255, 0.3);
    margin: 1rem auto 2rem;
    overflow: hidden;
  }
  
  .line-pulse {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, var(--neon-purple), transparent);
    animation: line-pulse 3s ease-in-out infinite;
  }
  
  @keyframes line-pulse {
    0% {
      left: -100%;
    }
    50%, 100% {
      left: 100%;
    }
  }
  
  .section-description {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
    font-family: 'Space Grotesk', sans-serif;
  }
  
  /* Layout principal de dos columnas */
  .main-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }
  
  /* COLUMNA DE TARJETAS */
  .cards-column {
    position: relative;
  }
  
  .cards-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    width: 100%;
  }
  
  .ventaja-card {
    position: relative;
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    height: 100%;
    min-height: 220px;
    opacity: 0;
    transform: translateY(30px);
    animation: card-appear 0.6s forwards ease-out;
    animation-delay: calc(var(--index, 0) * 0.15s);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .ventaja-card[data-index="1"] { --index: 1; }
  .ventaja-card[data-index="2"] { --index: 2; }
  .ventaja-card[data-index="3"] { --index: 3; }
  .ventaja-card[data-index="4"] { --index: 4; }
  .ventaja-card[data-index="5"] { --index: 5; }
  .ventaja-card[data-index="6"] { --index: 6; }
  
  @keyframes card-appear {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .ventaja-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  }
  
  /* Bordes animados de las tarjetas */
  .card-border-top, 
  .card-border-right, 
  .card-border-bottom, 
  .card-border-left {
    position: absolute;
    background: linear-gradient(90deg, transparent, var(--neon-purple), transparent);
    transition: all 0.3s ease;
  }
  
  .card-border-top, .card-border-bottom {
    height: 1px;
    width: 100%;
    transform: scaleX(0);
  }
  
  .card-border-right, .card-border-left {
    width: 1px;
    height: 100%;
    transform: scaleY(0);
  }
  
  .card-border-top {
    top: 0;
    left: 0;
    transform-origin: left;
  }
  
  .card-border-right {
    top: 0;
    right: 0;
    transform-origin: top;
  }
  
  .card-border-bottom {
    bottom: 0;
    right: 0;
    transform-origin: right;
  }
  
  .card-border-left {
    bottom: 0;
    left: 0;
    transform-origin: bottom;
  }
  
  .ventaja-card:hover .card-border-top {
    transform: scaleX(1);
    transition-delay: 0s;
  }
  
  .ventaja-card:hover .card-border-right {
    transform: scaleY(1);
    transition-delay: 0.1s;
  }
  
  .ventaja-card:hover .card-border-bottom {
    transform: scaleX(1);
    transition-delay: 0.2s;
  }
  
  .ventaja-card:hover .card-border-left {
    transform: scaleY(1);
    transition-delay: 0.3s;
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, var(--card-glow) 0%, transparent 70%);
    opacity: 0;
    z-index: -1;
    transition: opacity 0.5s ease;
  }
  
  .ventaja-card:hover .card-glow {
    opacity: 0.5;
  }
  
  .card-content {
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }
  
  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .ventaja-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: rgba(176, 66, 255, 0.1);
    color: var(--neon-purple);
    margin-right: 1rem;
    transition: all 0.3s ease;
    position: relative;
    flex-shrink: 0;
  }
  
  .ventaja-icon::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 1px solid var(--neon-purple);
    top: -1;
    left: -1;
    opacity: 0.5;
    animation: icon-pulse-pqe 3s infinite;
  }
  
  @keyframes icon-pulse-pqe {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.3);
      opacity: 0;
    }
  }
  
  .ventaja-card:hover .ventaja-icon {
    background: rgba(176, 66, 255, 0.2);
    transform: scale(1.1);
    box-shadow: 0 0 20px rgba(176, 66, 255, 0.3);
  }
  
  .ventaja-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    margin: 0;
    line-height: 1.3;
    font-family: 'Space Mono', monospace;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }
  
