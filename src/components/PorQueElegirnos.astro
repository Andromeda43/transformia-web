<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animación de entrada para tarjetas
    const ventajaCards = document.querySelectorAll('.ventaja-card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const index = entry.target.getAttribute('data-index');
          const indexValue = index ? parseInt(index) : 0;
          const targetElement = entry.target as HTMLElement;
          targetElement.style.animationDelay = `${indexValue * 0.15}s`;
          targetElement.style.animation = 'card-appear 0.6s forwards ease-out';
          
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    ventajaCards.forEach(card => {
      observer.observe(card);
    });
    
    // Efecto de mouse para tarjetas
    ventajaCards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const mouseEvent = e as MouseEvent;
        const rect = card.getBoundingClientRect();
        const x = mouseEvent.clientX - rect.left;
        const y = mouseEvent.clientY - rect.top;
        
        // Posición relativa del mouse dentro de la tarjeta (0-1)
        const posX = x / rect.width;
        const posY = y / rect.height;
        
        // Mover el efecto de resplandor según la posición del ratón
        const glow = card.querySelector('.card-glow') as HTMLElement;
        if (glow) {
          glow.style.background = `radial-gradient(circle at ${posX * 100}% ${posY * 100}%, var(--card-glow) 0%, transparent 70%)`;
        }
      });
    });
  });
</script>