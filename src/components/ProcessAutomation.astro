</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Seleccionar elementos del DOM
    const processSteps = document.querySelectorAll('.process-step');
    const navDots = document.querySelectorAll('.nav-dot');
    const prevButton = document.querySelector('.nav-button.prev');
    const nextButton = document.querySelector('.nav-button.next');
    
    // Función para activar un paso y su indicador correspondiente
    function activateStep(index: number) {
      // Desactivar todos los pasos e indicadores
      processSteps.forEach(step => {
        step.classList.remove('active');
      });
      
      navDots.forEach(dot => {
        dot.classList.remove('active');
      });
      
      // Activar el paso y el indicador según el índice
      if (index < processSteps.length && index >= 0) {
        processSteps[index].classList.add('active');
      }
      
      if (index < navDots.length && index >= 0) {
        navDots[index].classList.add('active');
      }
    }
    
    // Funcionamiento de los botones de navegación
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        // Encontrar el índice activo actual
        let activeIndex = Array.from(processSteps).findIndex(step => step.classList.contains('active'));
        
        // Ir al paso anterior, o al último si estamos en el primero
        if (activeIndex <= 0) {
          activeIndex = processSteps.length - 1;
        } else {
          activeIndex--;
        }
        
        activateStep(activeIndex);
      });
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        // Encontrar el índice activo actual
        let activeIndex = Array.from(processSteps).findIndex(step => step.classList.contains('active'));
        
        // Ir al siguiente paso, o al primero si estamos en el último
        if (activeIndex >= processSteps.length - 1 || activeIndex < 0) {
          activeIndex = 0;
        } else {
          activeIndex++;
        }
        
        activateStep(activeIndex);
      });
    }
    
    // Permitir clic en los indicadores de navegación
    navDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        activateStep(index);
      });
    });
    
    // Permitir clic en los pasos del proceso
    processSteps.forEach((step, index) => {
      step.addEventListener('click', () => {
        activateStep(index);
      });
    });
  });
</script>