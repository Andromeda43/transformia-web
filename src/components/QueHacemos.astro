<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Animación de entrada para las tarjetas
    const cards = document.querySelectorAll('.servicio-card');
    cards.forEach((card, index) => {
      const cardElement = card as HTMLElement;
      cardElement.style.setProperty('--card-index', index.toString());
      
      // Observador de intersección para activar animaciones cuando las tarjetas entran en vista
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });
      
      observer.observe(card);
      
      // Efecto interactivo en hover
      card.addEventListener('mousemove', (e) => {
        const mouseEvent = e as MouseEvent;
        const rect = card.getBoundingClientRect();
        const x = mouseEvent.clientX - rect.left;
        const y = mouseEvent.clientY - rect.top;
        
        // Calcular la posición relativa (0-1)
        const xPercent = x / rect.width;
        const yPercent = y / rect.height;
        
        // Aplicar transformación 3D sutil
        (card as HTMLElement).style.transform = `
          translateY(-15px) scale(1.03)
          rotateX(${(0.5 - yPercent) * 5}deg)
          rotateY(${(xPercent - 0.5) * 5}deg)
        `;
        
        // Efecto de iluminación dinámica
        const glowEffect = card.querySelector('.glow-effect');
        if (glowEffect) {
          (glowEffect as HTMLElement).style.background = `radial-gradient(circle at ${xPercent * 100}% ${yPercent * 100}%, rgba(176, 66, 255, 0.2) 0%, transparent 70%)`;
        }
      });
      
      // Restablecer al salir del hover
      card.addEventListener('mouseleave', () => {
        (card as HTMLElement).style.transform = '';
        
        // Restablecer el fondo del efecto de brillo
        const glowEffect = card.querySelector('.glow-effect');
        if (glowEffect) {
          (glowEffect as HTMLElement).style.background = '';
        }
      });
    });
    
    // Efecto parallax para elementos decorativos
    document.addEventListener('mousemove', (e) => {
      const mouseEvent = e as MouseEvent;
      const mouseX = mouseEvent.clientX;
      const mouseY = mouseEvent.clientY;
      
      const windowWidth = window.innerWidth;
      const windowHeight = window.innerHeight;
      
      // Mover partículas en función de la posición del ratón
      const particles = document.querySelector('.floating-particles');
      if (particles) {
        const moveX = (mouseX / windowWidth - 0.5) * 20;
        const moveY = (mouseY / windowHeight - 0.5) * 20;
        (particles as HTMLElement).style.transform = `translate(${moveX}px, ${moveY}px)`;
      }
    });
    
    // Animación para la barra de energía en las tarjetas
    cards.forEach(card => {
      const energyLevel = card.querySelector('.energy-level');
      
      card.addEventListener('mouseenter', () => {
        if (energyLevel) {
          (energyLevel as HTMLElement).style.width = '100%';
        }
      });
      
      card.addEventListener('mouseleave', () => {
        if (energyLevel) {
          (energyLevel as HTMLElement).style.width = '0';
        }
      });
    });
  });
</script>