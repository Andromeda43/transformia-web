<style>
:root {
    --neon-purple: rgb(176, 66, 255);
    --neon-blue: rgb(66, 135, 255);
    --neon-pink: rgb(255, 66, 176);
    --neon-yellow: rgb(232, 255, 66);
    --neon-green: rgb(66, 255, 102);
  }
  
  /* Estilos principales */
  .servicios-section {
    position: relative;
    background-color: #0a0a14;
    color: white;
    padding: 6rem 0;
    overflow: hidden;
    min-height: 100vh;
    z-index: 1;
  }
  
  .container {
    width: 95%; /* Aumentado para dar más espacio */
    max-width: 1400px; /* Aumentado para permitir tarjetas más anchas */
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }
  
  /* Efectos de fondo cibernético */
  .cyber-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .grid-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(128, 90, 213, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 90, 213, 0.05) 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
  }
  
  .floating-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(rgba(128, 90, 213, 0.2) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.5;
    z-index: 0;
    animation: floatParticles 120s linear infinite;
  }
  
  @keyframes floatParticles {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 100px 100px;
    }
  }
  
  .data-stream {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.1;
    background: url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Ctext x='10' y='50' font-family='monospace' font-size='10' fill='%23b042ff'%3E01001%3C/text%3E%3Ctext x='50' y='20' font-family='monospace' font-size='10' fill='%234287ff'%3E10101%3C/text%3E%3Ctext x='30' y='80' font-family='monospace' font-size='10' fill='%23ff42b0'%3E11010%3C/text%3E%3C/svg%3E");
    animation: dataStream 60s linear infinite;
    z-index: 0;
  }
  
  @keyframes dataStream {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 1000px 1000px;
    }
  }
  
  /* Estilos del encabezado */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    position: relative;
    display: inline-block;
  }
  
  .title-underline {
    position: relative;
    width: 120px;
    height: 3px;
    background: rgba(176, 66, 255, 0.3);
    margin: 1rem auto 2rem;
    overflow: hidden;
  }
  
  .line-glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      var(--neon-purple), 
      transparent
    );
    animation: lineGlow 3s ease-in-out infinite;
  }
  
  @keyframes lineGlow {
    0% {
      left: -100%;
    }
    50% {
      left: 100%;
    }
    100% {
      left: 100%;
    }
  }
  
  .section-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto;
    font-family: var(--font-body);
  }
  
  /* Efecto glitch para el título */
  .glitch-text {
    position: relative;
    color: white;
  }
  
  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }
  
  .glitch-text::before {
    color: #ff00ff;
    z-index: -1;
    animation: glitch-anim-1 3s infinite linear alternate;
  }
  
  .glitch-text::after {
    color: #00ffff;
    z-index: -2;
    animation: glitch-anim-2 2s infinite linear alternate;
  }
  
  @keyframes glitch-anim-1 {
    0%, 100% { opacity: 0; transform: translateX(0); }
    5%, 30% { opacity: 0; transform: translateX(0); }
    31% { opacity: 0.3; transform: translateX(2px); }
    32% { opacity: 0; transform: translateX(0); }
    98% { opacity: 0; transform: translateX(0); }
    99% { opacity: 0.3; transform: translateX(-2px); }
  }
  
  @keyframes glitch-anim-2 {
    0%, 100% { opacity: 0; transform: translateX(0); }
    10%, 40% { opacity: 0; transform: translateX(0); }
    41% { opacity: 0.3; transform: translateX(-2px); }
    42% { opacity: 0; transform: translateX(0); }
    78% { opacity: 0; transform: translateX(0); }
    79% { opacity: 0.3; transform: translateX(2px); }
    80% { opacity: 0; transform: translateX(0); }
  }
  
  /* Tarjetas de servicios */
  .servicios-cards {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
    margin-bottom: 5rem;
  }
  
  @media (min-width: 640px) {
    .servicios-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .servicios-cards {
      grid-template-columns: repeat(5, 1fr);
    }
  }
  
  .servicio-card {
    position: relative;
    background: rgba(26, 20, 45, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    border: 1px solid rgba(176, 66, 255, 0.2);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    height: 100%;
    display: flex;
    flex-direction: column;
    opacity: 0;
    transform: translateY(40px);
    animation: cardFadeIn 0.6s forwards ease-out;
    animation-delay: calc(var(--card-index, 0) * 0.1s);
  }
  
  /* Colores de tarjetas */
  .servicio-card[data-color="purple"] {
    --card-color: var(--neon-purple);
    --card-index: 0;
  }
  
  .servicio-card[data-color="blue"] {
    --card-color: var(--neon-blue);
    --card-index: 1;
  }
  
  .servicio-card[data-color="pink"] {
    --card-color: var(--neon-pink);
    --card-index: 2;
  }
  
  .servicio-card[data-color="yellow"] {
    --card-color: var(--neon-yellow);
    --card-index: 3;
  }
  
  .servicio-card[data-color="green"] {
    --card-color: var(--neon-green, #42ff66);
    --card-index: 4;
  }
  
  @keyframes cardFadeIn {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .servicio-card:hover {
    transform: translateY(-15px) scale(1.03);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 25px rgba(var(--card-color), 0.2);
    border-color: var(--card-color);
    z-index: 3;
  }
  
  .card-content {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }
  
  /* Iconos de las tarjetas */
  .servicio-icon-container {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
  }
  
  .icon-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(176, 66, 255, 0.1);
    border-radius: 50%;
    z-index: 1;
    transition: all 0.3s ease;
  }
  
  .servicio-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    z-index: 2;
    transition: all 0.4s ease;
    color: var(--neon-purple);
  }
  
  .servicio-icon.blue {
    color: var(--neon-blue);
  }
  
  .servicio-icon.pink {
    color: var(--neon-pink);
  }
  
  .servicio-icon.yellow {
    color: var(--neon-yellow);
  }
  
  .icon-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 2px solid var(--card-color);
    opacity: 0;
    z-index: 3;
    animation: iconPulse 2s infinite;
    transform-origin: center center;
    transform: translate(-50%, -50%);
  }
  
  @keyframes iconPulse {
    0% {
      transform: translate(-50%, -50%) scale(0.5);
      opacity: 0.7;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0;
    }
  }
  
  .servicio-card:hover .servicio-icon {
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 0 15px var(--card-color));
  }
  
  .servicio-card:hover .icon-background {
    transform: scale(1.2);
    background: rgba(var(--card-color), 0.2);
  }
  
