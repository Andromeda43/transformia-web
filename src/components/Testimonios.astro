<style>
  /* Elementos decorativos */
  .decor-circle {
    position: absolute;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    background: var(--color);
    top: var(--top, auto);
    left: var(--left, auto);
    right: var(--right, auto);
    bottom: var(--bottom, auto);
    z-index: 0;
  }
  
  .decor-lines {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-image: linear-gradient(90deg, rgba(176, 66, 255, 0.05) 1px, transparent 1px),
                      linear-gradient(rgba(176, 66, 255, 0.05) 1px, transparent 1px);
    background-size: 30px 30px;
    z-index: 0;
  }
  
  /* Testimonial Slider */
  .testimonials-slider {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .testimonials-wrapper {
    position: relative;
    height: 320px;
    overflow: hidden;
  }
  
  .testimonial-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 2.5rem;
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    opacity: 0;
    transition: all 0.5s ease;
    transform: translateX(50px);
  }
  
  .testimonial-card.active {
    opacity: 1;
    transform: translateX(0);
  }
  
  .testimonial-quote {
    position: absolute;
    top: 15px;
    left: 20px;
    font-size: 4rem;
    line-height: 1;
    font-family: var(--font-title);
    color: rgba(176, 66, 255, 0.1);
  }
  
  .testimonial-text {
    position: relative;
    z-index: 2;
    font-size: 1.1rem;
    line-height: 1.6;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
  }
  
  .testimonial-avatar {
    width: 50px;
    height: 50px;
    margin-right: 15px;
    border-radius: 50%;
    overflow: hidden;
    background: #f0f0f0;
  }
  
  .avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #6b46c1, #9f7aea);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
  }
  
  .card-beam {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, 
      var(--neon-purple) 0%, 
      var(--neon-blue) 50%, 
      var(--neon-purple) 100%
    );
    transition: width 3s ease-in-out;
  }
  
  .testimonial-card.active .card-beam {
    width: 100%;
  }
  
  /* Controles del slider */
  .testimonials-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
  }
  
  .nav-prev, .nav-next {
    background: white;
    border: 1px solid rgba(176, 66, 255, 0.3);
    color: var(--neon-purple);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .nav-prev:hover, .nav-next:hover {
    background: var(--neon-purple);
    color: white;
    box-shadow: 0 0 10px rgba(176, 66, 255, 0.5);
  }
  
  .testimonials-dots {
    display: flex;
    margin: 0 20px;
  }
  
  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #e0e0e0;
    margin: 0 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .dot.active {
    background: var(--neon-purple);
    transform: scale(1.3);
    box-shadow: 0 0 5px rgba(176, 66, 255, 0.5);
  }
  
  /* Cards de estadísticas */
  .stats-card {
    background: white;
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .stats-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }
  
  .stats-icon {
    width: 60px;
    height: 60px;
    background: rgba(176, 66, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: var(--neon-purple);
    transition: all 0.3s ease;
  }
  
  .stats-card:hover .stats-icon {
    background: var(--neon-purple);
    color: white;
    box-shadow: 0 0 15px rgba(176, 66, 255, 0.5);
  }
  
  .stats-value {
    font-size: 3rem;
    font-weight: bold;
    color: var(--neon-purple);
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
  }
  
  .stats-label {
    color: #666;
    font-size: 1rem;
    font-family: var(--font-sans);
  }
  
  .stats-bar {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 4px;
    width: 100%;
    background: linear-gradient(90deg, 
      var(--neon-purple) 0%, 
      var(--neon-blue) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .stats-card:hover .stats-bar {
    opacity: 1;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .testimonials-wrapper {
      height: 360px;
    }
    
    .testimonial-card {
      padding: 2rem;
    }
    
    .stats-card {
      margin-bottom: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.testimonial-card');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.querySelector('.nav-prev');
    const nextBtn = document.querySelector('.nav-next');
    
    let currentIndex = 0;
    const totalCards = cards.length;
    let autoplayInterval;
    
    function showCard(index) {
      // Ocultar todas las tarjetas y desactivar todos los puntos
      cards.forEach(card => {
        card.classList.remove('active');
      });
      
      dots.forEach(dot => {
        dot.classList.remove('active');
      });
      
      // Mostrar la tarjeta actual y activar el punto correspondiente
      cards[index].classList.add('active');
      dots[index].classList.add('active');
      
      // Reiniciar la barra de progreso
      const activeBeam = cards[index].querySelector('.card-beam');
      activeBeam.style.width = '0';
      
      // Permitir que el navegador renderice antes de animar
      setTimeout(() => {
        activeBeam.style.width = '100%';
      }, 50);
      
      // Actualizar el índice actual
      currentIndex = index;
    }
    
    function nextCard() {
      let nextIndex = currentIndex + 1;
      if (nextIndex >= totalCards) {
        nextIndex = 0;
      }
      showCard(nextIndex);
    }
    
    function prevCard() {
      let prevIndex = currentIndex - 1;
      if (prevIndex < 0) {
        prevIndex = totalCards - 1;
      }
      showCard(prevIndex);
    }
    
    // Iniciar autoplay
    function startAutoplay() {
      autoplayInterval = setInterval(() => {
        nextCard();
      }, 6000); // Cambiar cada 6 segundos
    }
    
    // Detener autoplay (al interactuar con los controles)
    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }
    
    // Event listeners para los botones de navegación
    prevBtn.addEventListener('click', () => {
      stopAutoplay();
      prevCard();
      startAutoplay();
    });
    
    nextBtn.addEventListener('click', () => {
      stopAutoplay();
      nextCard();
      startAutoplay();
    });
    
    // Event listeners para los puntos de navegación
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopAutoplay();
        showCard(index);
        startAutoplay();
      });
    });
    
    // Iniciar la presentación
    showCard(0);
    startAutoplay();
  });
</script>